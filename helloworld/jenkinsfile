pipeline {
    agent any
    tools {
    //adding the tools
        jdk "jdk8"
        maven "maven3.6.0"
        
        
        }

    stages {
        stage('compile stage') {
                           steps {
                              
                               sh 'mvn clean compile'
                                                  }

                           }

                       
        stage('test stage') {

                         steps {
                             
                            sh 'mvn test'
                                               

                         }


                     }
         stage('install stage') {
                            
                            steps {
                                
                                
                                 sh 'mvn install'
                                                  

                            }

                        }
         


 

    }

}
